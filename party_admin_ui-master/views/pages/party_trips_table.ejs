      <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
      <script>
    $( function() {
        $('#edit_pickup_date').datepicker({
        selectOtherMonths: true,
        showButtonPanel: true,
        changeMonth: true,
        minDate: "D",
    });
     $('#edit_pickup_time').timepicker({
        timeFormat: 'h:mm p',
        interval: 1,
        defaultTime: 'now',
        dropdown: false,
        dynamic: true,
     });
   } );
    </script>
<script>
    function enableNoOfDays(status)
    {
        if(status==false)
        {
            document.getElementById("edit_num_days").value=null;
        }
        status=!status;	
        document.getElementById("edit_num_days").disabled =status;

    }
        
</script>
   


