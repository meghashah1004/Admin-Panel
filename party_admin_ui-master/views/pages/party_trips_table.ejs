        <!--edit trips Modal -->
        <form class="modal fade" data-keyboard="false" data-backdrop="static" id="edit_record_modal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                        <h4 class="modal-title"><span class="glyphicon glyphicon-pencil"></span> Edit Trip Details</h4>
                    </div>
                        <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12">
                            
                            </div>    
                        </div>    
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label >Id:  <label id="edit_id" ></label></label>
                                </div>
                            </div>    
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Name:  <label id="edit_name" ></label></label>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Phone No:  <label id="edit_phone_no" ></label></label>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                 <div class="form-group">
                                    <label>Created At:  <label id="edit_created_At" ></label></label>
                                </div>
                            </div>
                        </div>
                       
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Booking Type: </label>
                                    <div class="custom-select"  >
                                       <select id="edit_booking_type" name="edit_booking_type"style="padding:10px 30px; color: #333; font-family: Helvetica; font-weight: bold"  disabled> 
                                        <option value="Personal">Personal</option> 
                                        <option value="Corporate">Corporate</option> 
                                         </select>
                                    </div>
                              </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Pickup date
                                    <input type="text"  class="form-control" id="edit_pickup_date"   style="display: inline" disabled>
                                    </label>
                                </div> 
                            </div>    
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Pickup time
                                    <input type="text"  class="form-control" id="edit_pickup_time"   style="display: inline" disabled>
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                        <label>Promo code
                                        <input type="text"  class="form-control" id="edit_promocode"   style="display: inline" min=1 disabled>
                                        </label>
                                </div>   
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Pickup Location
                                    </label>
                                    <input type="text"  class="form-control" id="edit_pickup_loc"   style="display: inline" >
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Waypoints
                                    </label>
                                    <input type="text"  class="form-control" id="edit_waypoints"   style="display: inline" >
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Drop Location
                                    </label>
                                    <input type="text"  class="form-control" id="edit_drop_loc"   style="display: inline" >
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            
                        </div>    
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Car Type 
                                    <div class="custom-select"  style="display: inline">
                                        
                                   <select id="edit_car_type" name="edit_car_type" style="padding:10px 50px; color: #333; font-family: Helvetica; font-weight: bold" disabled> 
                                    <option value="ac">AC</option> 
                                    <option value="non-ac">NON-AC </option> 
                                </select>
                            </div></label>
                                </div> 
                            </div>    
                            <div class="col-sm-3">
                                <div class="form-group">
                                        <label>Number of seats 
                                        <div class="custom-select"  style="display: inline">
                                       <select id="edit_num_seats" name="edit_num_seats" style="padding:10px 50px; color: #333; font-family: Helvetica; font-weight: bold"
                                              disabled > 
                                        <option value="4">4</option> 
                                        <option value="5">5</option> 
                                    </select>
                                </div></label>
                                    </div> 
                            </div> 
                              <div class="col-sm-6">
                        <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                     <label class="custom-checkbox"><input class="custom_checkbox" type="checkbox" value="" id="edit_is_return_trip" name="edit_is_return_trip" onclick="enableNoOfDays(this.checked);" /> Is Return Trip
                                </label> 
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                    <label>No of Days
                                    <input type="number"  class="form-control" id="edit_num_days" disabled min=1>
                                    </label>
                            </div>
                        </div>
                        </div>
                        </div>
                        </div>
                    <div class="modal-header">
                            <h4 class="modal-title"><i class="fa fa-rupee"></i> Distance and Fare details </h4>
                        </div>   
                    <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                    <label>Average Distance
                                    <input type="number"  class="form-control" id="edit_avg_dist"   style="display: inline" min=1>
                                    </label>
                            </div>   
                        </div>
                        <div class="col-sm-4">
                             <div class="form-group">
                                    <label>Average Duration
                                    <input type="number"  class="form-control" id="edit_avg_duration"   style="display: inline" min=0>
                                    </label>
                            </div>   
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                             <div class="form-group">
                                    <label>Average Fare
                                    <input type="number"  class="form-control" id="edit_avg_fare"   style="display: inline" min=0>
                                    </label>
                            </div>   
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                    <label>Fare with Toll
                                    <input type="number"  class="form-control" id="edit_fare_with_toll"   style="display: inline" min=0>
                                    </label>
                            </div>   
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                    <label>Fare without Toll
                                    <input type="number"  class="form-control" id="edit_fare_without_toll"   style="display: inline" min=0>
                                    </label>
                            </div> 
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                    </div>
    <!--                    vehicle details-->
                     <div id="vehicleDetails" style="display: none">
                        <div class="modal-header">
                            <h4 class="modal-title"><i class="fa fa-taxi"></i> Assign Vehicle</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>License Plate</label>
                                        <input type="text"  class="form-control" id="edit_license_plate">
                                    </div>
                                </div>
                            </div>
                             <div class="row">
                                <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Driver Name</label>
                                    <input type="text"  class="form-control" id="edit_driver_name">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Driver Contact Number</label>
                                    <input type="text"  class="form-control" id="edit_driver_contact_number">
                                </div>
                             </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Owner Name</label>
                                    <input type="text"  class="form-control" id="edit_owner_name">
                                </div>
                                </div>
                                <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Owner Contact Number</label>
                                    <input type="text"  class="form-control" id="edit_owner_contact_number">
                                </div>    
                                </div>
                            </div>

                        </div>
                    </div>       
<!--                        vehicle details end-->
                    <div class="modal-footer"></div>     
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Status: 
                                        <div class="custom-select"  style="display: inline">
                                       <select id="edit_status" name="edit_status" style="padding:10px 50px; color: #333; font-family: Helvetica; font-weight: bold; font-size:14px "> 
                                        <option value="0">Initiated</option> 
                                        <option value="1">Confirmed</option> 
                                        <option value="2">Active</option> 
                                        <option value="3">Completed</option> 
                                        <option value="-1">Cancelled by User</option> 
                                        <option value="-2">Cancelled by Admin</option> 
                                        </select>
                                       </div>
                                    </label>
                              </div>
                            </div>
                      
                    </div>    
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="submit_trip_modal">Save changes</button>
                    </div>
                </div>
            </div>
        </form>

            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
